@model IEnumerable<Hydron.Models.Definitions.NotificationPriority_LockupModel>

<div class="modal fade" id="portlet-config-users" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title"><span id="model-title-span">Settings</span></h4>
            </div>
            <div class="modal-body">

                <a href="javascript:;" class="search" onclick="enableAdvancedT(this);" id="icoSearchm">Enable Advanced Table</a>

                <div class="actions" style="display:none">
                    <h5>Hide and show columns</h5>



                    <div id="sample_2_column_toggler" class=" hold-on-click checkboxes pull-right">
                        <label><input type="checkbox" checked data-column="0">ID</label>
                        <label><input type="checkbox" checked data-column="1">Prioirity</label>
                        <label><input type="checkbox" checked data-column="2">Description</label>
                        <label><input type="checkbox" checked data-column="3">Icon</label>
                        <label><input type="checkbox" checked data-column="4">Icon Class</label>
                        <label><input type="checkbox" checked data-column="5">Escalation Interval</label>
                        <label><input type="checkbox" checked data-column="6">Reminer Frequency</label>
                        <label><input type="checkbox" checked data-column="7">Ex1</label>
                        <label><input type="checkbox" checked data-column="8">Ex2</label> 
                        <label><input type="checkbox" checked data-column="9">LifetimeInDays</label>
                        <label><input type="checkbox" checked data-column="10">ExtensionsAllowed</label> 

                        <label><input type="checkbox" checked data-column="11">Status</label>
                        <label><input type="checkbox" checked data-column="13">Actions</label>                                                 
                    </div>

                </div>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn blue" data-dismiss="modal">Ok</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<table class="table table-striped table-bordered table-hover table-full-width" id="sample_2">
    <thead>
        <tr>

            <th>
                @Html.DisplayName("ID")
            </th>
            <th>
                @Html.DisplayName("Prioirity")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
            <th>
                @Html.DisplayName("Icon")
            </th>
            <th>
                @Html.DisplayName("Icon Class")
            </th>
            <th>
                @Html.DisplayName("Escalation Interval")
            </th>
            <th>
                @Html.DisplayName("Reminer Frequency")
            </th>
            <th>
                @Html.DisplayName("Ex1")
            </th>
            <th>
                @Html.DisplayName("Ex2")
            </th>
            <th>
                @Html.DisplayName("LifetimeInDays")
            </th>
            <th>
                @Html.DisplayName("ExtensionsAllowed")
            </th>

            <th>
                @Html.DisplayName("Status")
            </th>
            <th>
                @Html.DisplayName("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id )
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.Prioirity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Icon)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IconClass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EscalationInterval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReminerFrequency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ex1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ex2)
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.LifetimeInDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExtensionsAllowed)
                </td> 
                <td>
                    @{

                        switch (item.IsActive)
                        {
                            case true: <span class="label label-sm label-success">Yes</span>
                                break;
                            case false: <span class="label label-sm label-warning">No</span>
                                break;
                        }
                    }

                </td>             
                <td>

                    @Html.ActionLink("view", "Define", "NotificationPriority_Lockup", new { rId = item.Id, vw = "r" }, new { @class = "btn default btn-xs blue-stripe fa fa-eye" }) |
                    @Html.ActionLink("edit", "Define", "NotificationPriority_Lockup", new { rId = item.Id, vw = "e" }, new { @class = "btn default btn-xs yellow-stripe fa fa-edit" })

                </td>

            </tr>

        }
    </tbody>
</table>

<script type="text/javascript">

    var enableAdvancedT = function (e) {
        initSearch(e);
        $('#icoSearch').hide();
        $('#icoSearchm').hide();
        $('.modal-body').find('.actions').show();

    }

</script>