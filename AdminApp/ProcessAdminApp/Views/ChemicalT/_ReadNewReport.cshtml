@model Hydron.Models.Definitions.ProcessMasterExtModel


  <table border="1">
                            <tbody>
                                <tr><th colspan="2"><strong>To be filled by Requestor</strong></th></tr>                              
                                <tr>
                                    <th>Name of Substance:</th>
                                    <td>
                                        @*@Model.ProcessMaster.title*@
                                    </td>
                                </tr>

                                <tr>
                                    <th>Supplier (inc Address & Tel):</th>
                                    <td>
                                        @*@Model.ProcessMaster.location*@
                                    </td>
                                </tr>

                                <tr>
                                    <th>Detailed description of proposed use(s):</th>
                                    <td>
                                        @*@Model.ProcessMaster.Description*@
                                    </td>
                                </tr>

                                <tr>
                                    <th>Is this chemical will be discharged to environment (either gas or liquid form) as part of planned operations? </th>
                                    <td>
                                        
                                        @switch (@Model.Chem_isDischarged)
                                        {
                                            case true: <span>YES</span>
                                                break;
                                            case false: <span>NO</span>
                                                break;
                                        }


                                    </td>
                                </tr>

                                <tr>
                                    <th>Plant equipment / Area of use:</th>
                                    <td>
                                        @Model.Chem_EquipArea
                                              </td>
                                </tr>

                                <tr>
                                    <th>Material quantity (total inventory) / pack size</th>
                                    <td>
                                        @Model.Chem_Qty
                                    </td>
                                </tr>

                                <tr>
                                    <th>Form material supplied / used (e.g. solid / liquid /gas)</th>
                                    <td>
                                        @Model.Chem_FormMaterial
                                    </td>
                                </tr>

                                <tr>
                                    <th>Type of storage container for this chemical</th>
                                    <td>
                                        @Model.Chem_TypeStorage
                                    </td>
                                </tr>

                                <tr>
                                    <th>Proposed disposal of containers:</th>
                                    <td>
                                        @Model.Chem_DisposeContainer
                                    </td>
                                </tr>

                                <tr>
                                    <th>Proposed disposal of spent chemical:</th>
                                    <td>
                                        @Model.Chem_DisposeChemical
                                    </td>
                                </tr>

                                <tr>
                                    <th>Intened use of chemical:</th>
                                    <td>
                                        @Model.Chem_Use
                                    </td>
                                </tr>

                                <tr>
                                    <th>Intended date of receipt:</th>
                                    <td>
                                        @Model.Chem_DateReceipt
                                    </td>
                                </tr>

                                <tr><th colspan="2"><strong>To be filled by Warehouse in-charge</strong></th></tr>
                                <tr>
                                    <th>Proposed storage location:</th>
                                    <td>
                                        @Model.Storage
                                    </td>
                                </tr>

                                <tr><th colspan="2"><strong>To be filled by HSE Representative</strong></th></tr>
                                <tr>
                                    <th>Is this regulated by the law?</th>
                                    <td>
                                       
                                        @switch (@Model.Chem_isRegulate)
                                        {
                                            case true: <span>YES</span>
                                                break;
                                            case false: <span>NO</span>
                                                break;
                                        }


                                    </td>
                                </tr>

                                <tr>
                                    <th>COSHH initial assessment completed?</th>
                                    <td>
                                        
                                        @switch (Model.Coshh_isCompleted)
                                        {
                                            case true: <span>YES</span>
                                                break;
                                            case false: <span>NO</span>
                                                break;
                                        }

                                    </td>
                                </tr>
                                <tr>
                                    <th>Health Safety and Environment Impact Review</th>
                                    <td>
                                        @Model.Chem_Impact
                                    </td>
                                </tr>
                            </tbody>
                        </table>
  <table border="1" style="margin-top: 50px;">
                            <tbody>

                                <tr><th colspan="2"><strong>Usage Information:</strong> (To be completed by Requestor)</th></tr>
                                <tr>
                                    <th><strong>1.  New Chemical</strong></th>
                                    <td>
                                       

                                        @switch (Model.Chem_isNew)
                                        {
                                            case true: <span>YES</span>
                                                break;
                                            case false: <span>NO</span>
                                                break;
                                        }

                                    </td>
                                </tr>

                                <tr>
                                    <th><strong>1.1 Stock Item</strong></th>
                                    <td>
                             
                                        @switch (Model.Chem_isStock)
                                        {
                                            case true: <span>YES</span>
                                                break;
                                            case false: <span>NO</span>
                                                break;
                                        }

                                    </td>
                                </tr>

                                <tr>
                                    <th >Order Quantity</th>
                                    <td>
                                        @Model.Chem_StockOrder
                                    </td>
                                </tr>

                                <tr>
                                    <th > Projected Max inventory</th>
                                    <td>
                                        @Model.Chem_StockMaxInven
                                    </td>
                                </tr>

                                <tr>
                                    <th >Projected Usage Rate</th>
                                    <td>
                                        @Model.Chem_StockUsage
                                    </td>
                                </tr>
                                <tr>
                                    <th><strong>1.2 Non-stock Item</strong></th>
                                    <td>
                                       
                                        @switch (Model.Chem_isNonStock)
                                        {
                                            case true: <span>YES</span>
                                                break;
                                            case false: <span>NO</span>
                                                break;
                                        }

                                    </td>
                                </tr>

                                <tr>
                                    <th>Order Quantity</th>
                                    <td>
                                        @Model.Chem_NonStockOrder
                                    </td>
                                </tr>

                                <tr>
                                    <th><strong>2.  Replacement Chemical</strong></th>
                                    <td>
                                      
                                        @switch (Model.Chem_isReplacement)
                                        {
                                            case true: <span>YES</span>
                                                break;
                                            case false: <span>NO</span>
                                                break;
                                        }

                                    </td>
                                </tr>
                                <tr>
                                    <th>Details of chemical being replaced:</th>
                                    <td>
                                        @Model.Chem_ReplaceDetails
                                    </td>
                                </tr>
                                <tr>
                                    <th><strong>3.  Temporary/Trial Chemical</strong></th>
                                    <td>
                                      
                                        @switch (Model.Chem_isTemp)
                                        {
                                            case true: <span>YES</span>
                                                break;
                                            case false: <span>NO</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Order Quantity:</th>
                                    <td>
                                        @Model.Chem_TempOrder
                                    </td>
                                </tr>

                                <tr>
                                    <th>Additional information:</th>
                                    <td>
                                        @Model.Chem_ExtraInfo
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                   




