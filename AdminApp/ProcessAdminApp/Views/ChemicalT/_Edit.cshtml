@model Hydron.Models.Definitions.ChemicalTModel

<link href="~/assets/css/custom.css" rel="stylesheet" />

@using (Html.BeginForm("Define", "ChemicalT", FormMethod.Post, new { enctype = "multipart/form-data", id = "Define" }))
{   @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        @*<legend>Departments </legend>*@

        @{
            if (ViewData.ModelState["error"] != null)
            {  <div class="alert alert-danger ">
            <button class="close" data-close="alert"></button>
            @ViewData.ModelState["error"].Errors[0].ErrorMessage

        </div>}
        }
        <div class="alert alert-danger display-hide">
            <button class="close" data-close="alert"></button>
            You have some form errors. Please check below.

        </div>
        <div class="alert alert-success display-hide">
            <button class="close" data-close="alert"></button>
            Your form validation is successful!
        </div>
        <div class="form-horizontal form-bordered">
            <div class="form-body">              
                <div class="containe r">
                    <div class="product-detail-tabs">
                        <ul class="nav nav-tabs">
                            <li class="nav-item"><a class="nav-link active show" data-toggle="tab" href="#chemical-information">Chemical Approval Process</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active show" id="chemical-information">
                                <table border="1">
                                    <tbody>
                                        <tr><th colspan="2" style="padding: 5px 20px; background-color:#2e90f4; color: white;"><strong>To be filled by Requestor</strong></th></tr>
                                        
                                        @Html.HiddenFor(m => m.Id)
                                        <tr><th>Name of Substance:</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.SubstanceName, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Substance Name", name = "SubstanceName" })
                                              @Html.ValidationMessageFor(m => m.SubstanceName)
                                            </td>
                                        </tr>

                                        <tr><th>Supplier (inc Address & Tel):</th>
                                        <td>
                                            @Html.TextAreaFor(m => m.Supplier, new { @class = "form-control placeholder-no-fix", type = "text", autocomplete = "off", maxlength = "500", rows = "2", placeholder = "Supplier", name = "Supplier" })                                       
                                            </td>
                                        </tr>

                                        <tr><th>Detailed description of proposed use(s):</th>
                                        <td>
                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control placeholder-no-fix", type = "text", autocomplete = "off", maxlength = "500", rows = "2", placeholder = "Description", name = "Description" })                                        
                                            </td>
                                        </tr>

                                        <tr><th>Is this chemical will be discharged to environment (either gas or liquid form) as part of planned operations? </th>
                                        <td>                                          
                                            <div class="make-switch" data-on="success" data-off="warning" data-on-label="&nbsp;YES&nbsp;" data-off-label="&nbsp;NO&nbsp;&nbsp;">

                                                @Html.CheckBoxFor(m => m.DischargeToEnvironment, new { name = "DischargeToEnvironment", @checked = "", @class = "toggle" })

                                            </div>

                                            </td>
                                        </tr>
                                        
                                        <tr><th>Plant equipment / Area of use:</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.AreaUse, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Area Use", name = "AreaUse" })
                                            @Html.ValidationMessageFor(m => m.AreaUse)
                                         </td>
                                        </tr>
                                                                              
                                        <tr><th>Material quantity (total inventory) / pack size</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Quantity", name = "Quantity" })
                                            @Html.ValidationMessageFor(m => m.Quantity)
                                            </td>
                                        </tr>
                                        
                                        <tr><th>Form material supplied / used (e.g. solid / liquid /gas)</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.MaterialUsed, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Material Used", name = "MaterialUsed" })
                                            @Html.ValidationMessageFor(m => m.MaterialUsed)
                                            </td>
                                        </tr>
                                                                                
                                        <tr><th>Type of storage container for this chemical</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.Storage, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Storage", name = "Storage" })
                                            @Html.ValidationMessageFor(m => m.Storage)
                                            </td>
                                        </tr>
                                        
                                        <tr><th>Proposed disposal of containers:</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.DisposalContainers, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Disposal Containers", name = "DisposalContainers" })
                                            @Html.ValidationMessageFor(m => m.DisposalContainers)
                                            </td>
                                        </tr>
                                        
                                        <tr><th>Proposed disposal of spent chemical:</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.DisposalChemical, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Disposal Chemical", name = "DisposalChemical" })
                                            @Html.ValidationMessageFor(m => m.DisposalChemical)
                                            </td>
                                        </tr>
                                        
                                        <tr><th>Intened use of chemical:</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.ChemicalUse, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Chemical Use", name = "ChemicalUse" })
                                            @Html.ValidationMessageFor(m => m.ChemicalUse)
                                            </td>
                                        </tr>

                                        <tr><th>Intended date of receipt:</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.DateReciept, new { @class = "form-control placeholder-no-fix date-picker", type = "text", autocomplete = "off", placeholder = "Date Reciept", name = "DateReciept" })
                                            @Html.ValidationMessageFor(m => m.DateReciept)
                                            </td>
                                        </tr>

                                        <tr><th colspan="2" style="padding: 5px 20px;background-color:#2e90f4; color: white;"><strong>To be filled by Warehouse in-charge</strong></th></tr>
                                        <tr><th>Proposed storage location:</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.StorageLocation, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Storage Location", name = "StorageLocation" })
                                            @Html.ValidationMessageFor(m => m.StorageLocation)
                                            </td>
                                        </tr>
                                        
                                        <tr><th colspan="2" style="padding: 5px 20px;background-color:#2e90f4; color: white;"><strong>To be filled by HSE Representative</strong></th></tr>
                                        <tr><th>Is this regulated by the law?</th>
                                        <td>
                                            <div class="make-switch" data-on="success" data-off="warning" data-on-label="&nbsp;YES&nbsp;" data-off-label="&nbsp;NO&nbsp;&nbsp;">

                                                @Html.CheckBoxFor(m => m.RegulatedbyLaw, new { name = "RegulatedbyLaw", @checked = "", @class = "toggle" })

                                            </div>
                                            </td>
                                        </tr>

                                        <tr><th>COSHH initial assessment completed?</th>
                                        <td>
                                            <div class="make-switch" data-on="success" data-off="warning" data-on-label="&nbsp;YES&nbsp;" data-off-label="&nbsp;NO&nbsp;&nbsp;">

                                                @Html.CheckBoxFor(m => m.COSHH_Completed, new { name = "COSHH_Completed", @checked = "", @class = "toggle" })

                                            </div>
                                            </td>
                                        </tr>
                                        <tr><th>Health Safety and Environment Impact Review</th>
                                        <td>
                                            @Html.TextAreaFor(m => m.HSE_Impact, new { @class = "form-control placeholder-no-fix", type = "text", autocomplete = "off", maxlength = "500", rows = "2", placeholder = "HSE Impact", name = "HSE_Impact" })                                        
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table border="1" style="margin-top: 50px;">
                                    <tbody>
                                        
                                        <tr><th colspan="2" style="padding: 5px 20px; background-color:#2e90f4; color: white;"><strong>Usage Information:</strong> (To be completed by Requestor)</th></tr>
                                        <tr>
                                            <th><strong>1.  New Chemical</strong></th>
                                            <td>
                                                <div class="make-switch" data-on="success" data-off="warning" data-on-label="&nbsp;YES&nbsp;" data-off-label="&nbsp;NO&nbsp;&nbsp;">

                                                    @Html.CheckBoxFor(m => m.NewChemical, new { name = "NewChemical", @checked = "", @class = "toggle" })

                                                </div>
                                            </td>
                                        </tr>

                                        <tr>
                                            <th style="padding: 5px 30px;"><strong>1.1 Stock Item</strong></th>
                                            <td>
                                                <div class="make-switch" data-on="success" data-off="warning" data-on-label="&nbsp;YES&nbsp;" data-off-label="&nbsp;NO&nbsp;&nbsp;">

                                                    @Html.CheckBoxFor(m => m.StockItem, new { name = "StockItem", @checked = "", @class = "toggle" })

                                                </div>
                                            </td>
                                        </tr>
                                        
                                        <tr><th style="padding: 5px 50px;">Order Quantity</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.StockOrderQty, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "StockOrderQty", name = "StockOrderQty" })
                                            @Html.ValidationMessageFor(m => m.StockOrderQty)
                                            </td>
                                        </tr>

                                        <tr><th style="padding: 5px 50px;"> Projected Max inventory</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.MaxInventory, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Max Inventory", name = "MaxInventory" })
                                            @Html.ValidationMessageFor(m => m.MaxInventory)
                                            </td>
                                        </tr>
                                        
                                        <tr><th style="padding: 5px 50px;">Projected Usage Rate</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.UsageRate, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "UsageRate", name = "UsageRate" })
                                            @Html.ValidationMessageFor(m => m.UsageRate)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th style="padding: 5px 30px;"><strong>1.2 Non-stock Item</strong></th>
                                            <td>
                                                <div class="make-switch" data-on="success" data-off="warning" data-on-label="&nbsp;YES&nbsp;" data-off-label="&nbsp;NO&nbsp;&nbsp;">

                                                    @Html.CheckBoxFor(m => m.NonStockItem, new { name = "NonStockItem", @checked = "", @class = "toggle" })

                                                </div>
                                            </td>
                                        </tr>

                                        <tr><th style="padding: 5px 50px;">Order Quantity</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.NonStockOrderQty, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Order Qty", name = "NonStockOrderQty" })
                                            @Html.ValidationMessageFor(m => m.NonStockOrderQty)
                                            </td>
                                        </tr>

                                        <tr>
                                            <th><strong>2.  Replacement Chemical</strong></th>
                                            <td>
                                                <div class="make-switch" data-on="success" data-off="warning" data-on-label="&nbsp;YES&nbsp;" data-off-label="&nbsp;NO&nbsp;&nbsp;">

                                                    @Html.CheckBoxFor(m => m.ChemicalReplacement, new { name = "ChemicalReplacement", @checked = "", @class = "toggle" })

                                                </div>
                                            </td>
                                        </tr>
                                        <tr><th style="padding: 5px 50px;">Details of chemical being replaced:</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.RepliacementDetails, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Details", name = "RepliacementDetails" })
                                            @Html.ValidationMessageFor(m => m.RepliacementDetails)
                                            </td>
                                        </tr>
                                        <tr>
                                            <th><strong>3.  Temporary/Trial Chemical</strong></th>
                                            <td>
                                                <div class="make-switch" data-on="success" data-off="warning" data-on-label="&nbsp;YES&nbsp;" data-off-label="&nbsp;NO&nbsp;&nbsp;">

                                                    @Html.CheckBoxFor(m => m.TempChemical, new { name = "TempChemical", @checked = "", @class = "toggle" })

                                                </div>
                                            </td>
                                        </tr>
                                        <tr><th style="padding: 5px 50px;">Order Quantity:</th>
                                        <td>
                                            @Html.TextBoxFor(m => m.TempOrderQty, new { @class = "form-control placeholder-no-fix ", type = "text", autocomplete = "off", maxlength = "50", placeholder = "Quantity", name = "TempOrderQty" })
                                            @Html.ValidationMessageFor(m => m.TempOrderQty)
                                            </td>
                                        </tr>

                                        <tr><th>Additional information:</th>
                                        <td>
                                            @Html.TextAreaFor(m => m.AdditionalInfo, new { @class = "form-control placeholder-no-fix", type = "text", autocomplete = "off", maxlength = "500", rows = "2", placeholder = "Additional Info", name = "AdditionalInfo" })
                                            
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="margiv-top-10">
                    <a data-toggle="modal" class="btn green" role="button" href="#modalSave" onclick="handleChemicalT();">Save Changes</a>

                </div>
                <div aria-hidden="true" aria-labelledby="myModalLabel3" role="dialog" tabindex="-1" class="modal fade" id="modalSave" style="display: none;">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button aria-hidden="true" data-dismiss="modal" class="close" type="button"></button>
                                <h4 class="modal-title"> </h4>
                            </div>
                            <div class="modal-body">
                                @*the value to be set when calling  initModT('Save');*@
                            </div>
                            <div class="modal-footer">
                                <h5 class="modal-msg" style="display:none"> <span><img src='/assets/img/loading.gif'></span> </h5>
                                <button aria-hidden="true" data-dismiss="modal" class="btn default">Close</button>
                                <button type="submit" value="Save" class="btn green" id="fsbtn">
                                    <i class="fa fa-save"></i>Save

                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </fieldset>
            <div id="register_tnc_error"></div>

            }

<script type="text/javascript">
    

                    jQuery(document).ready(function () {
